<h1>Listing article_categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Alias</th>
    <th>Menu label</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @article_categories.each do |article_category| %>
  <tr>
    <td><%= article_category.title %></td>
    <td><%= article_category.alias %></td>
    <td><%= article_category.menu_label %></td>
    <td><%= article_category.position %></td>
    <td><%= link_to 'Show', article_category %></td>
    <td><%= link_to 'Edit', edit_article_category_path(article_category) %></td>
    <td><%= link_to 'Destroy', article_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

